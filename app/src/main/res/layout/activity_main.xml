<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:orientation="vertical"
    android:background="#FFFF99CC">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Data"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="65dp"
            android:id="@+id/tv_jml_siswa"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Jumlah Siswa"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_jml_guru"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_jml_siswa"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Jumlah Guru"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_nama_sekolah"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_jml_guru"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Nama Sekolah"
            android:textSize="23sp" />
        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_nama_sekolah"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="alamat Sekolah"
            android:textSize="21sp" />

        <EditText
            android:layout_marginTop="80dp"
            android:id="@+id/et_jml_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_jml_siswa"
            android:textSize="21sp" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_jml_guru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jml_siswa"
            android:layout_toRightOf="@id/tv_jml_guru"
            android:textSize="21sp" />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_nama_sekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jml_guru"
            android:layout_toRightOf="@id/tv_nama_sekolah"
            android:textSize="21sp" />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_alamat_sekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_sekolah"
            android:layout_toRightOf="@id/tv_alamat"
            android:textSize="21sp" />
        <Button
            android:layout_marginTop="60dp"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@id/tv_alamat"/>
        <Button
           android:layout_marginTop="2
           0dp"
            android:id="@+id/btn_lihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Data"
            android:layout_below="@+id/btn_submit"/>

    </RelativeLayout>


</LinearLayout>